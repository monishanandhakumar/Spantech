                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem=>item.TenMostExpensiveProducts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TenMostExpensiveProducts">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TenMostExpensiveProducts">Details</a> |
