@model IEnumerable<Day3_EFCore_DBFirst.Models.Ten_Most_Expensive_Products>

@{
    ViewData["Title"] = "TenProducts";
}

<h1>TenProducts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
